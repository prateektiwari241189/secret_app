<!DOCTYPE html>
<html>
  <head>
    <title>SecretApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main_content">
    <div id="header">
      
      <div class="buttons">
      <% if user_signed_in? %>
        <button class="button"><%= link_to "Sign Up as Admin", new_user_registration_path %></button>
        <button class="button"><%= link_to "Log Out", destroy_user_session_path, method: :delete %></button>
      <% else %>
        <button class="button"><%= link_to "Admin Sign In", new_user_session_path%></button>
        
      <% end %>
      </div>
    </div>
    
    <% flash.each do |message_type,message| %>
      <%= content_tag(:div, message, class: "alert") %>
    <% end %>

  <%= yield %>
  </div>
  </body>
</html>
